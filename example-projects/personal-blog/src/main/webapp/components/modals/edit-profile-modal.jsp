<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<div class="modal" id="edit-profile-modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">
				<form action="">
					<input type="text" name="name" class="form-control mb-3" placeholder="Enter Your Name"/>
					<input type="text" name="email" class="form-control mb-3" placeholder="Enter Email"/>
					<div class="text-end">
						<button class="btn btn-outline-danger"><i class="bi bi-x me-2"></i> Cancel</button>
						<button class="btn btn-primary d-inline-block w-25"><i class="bi bi-box-arrow-up-right me-2"></i> Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>